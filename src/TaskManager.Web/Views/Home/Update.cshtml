@using TaskManager.Domain.Entities.Statuses;
@model TaskManager.Web.Models.UpdateTaskViewModel
@{
    ViewData["Title"] = "Update Task";
    var task = ViewBag.TaskDto as TaskManager.Application.Tasks.TaskDto;
    var statuses = ViewBag.Statuses as List<Status>;
    var selectList = new SelectList(statuses, "Id", "Name", task.StatusId);
}

<form asp-action="AddOrUpdate">
    <input type="hidden" asp-for="TaskDto.Id" value="@task.Id" />
    <div class="form-group">
        <label asp-for="TaskDto.Name"></label>
        <input asp-for="TaskDto.Name" class="form-control" value="@task.Name" />
        <span asp-validation-for="TaskDto.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskDto.Description"></label>
        <input asp-for="TaskDto.Description" class="form-control" value="@task.Description" />
        <span asp-validation-for="TaskDto.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TaskDto.StatusId"></label>
        <select asp-for="TaskDto.StatusId" asp-items="@selectList" class="form-control"></select>
        <span asp-validation-for="TaskDto.StatusId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
